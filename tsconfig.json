{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017"],
    "pretty": true,
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src", "./typechain"],
  "compileOnSave": true
}
